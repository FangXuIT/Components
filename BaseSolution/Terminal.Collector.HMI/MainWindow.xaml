<mah:MetroWindow x:Class="Terminal.Collector.HMI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:view="clr-namespace:Terminal.Collector.HMI.View"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"        
        xmlns:local="clr-namespace:Terminal.Collector.HMI"
        mc:Ignorable="d"
        Title="中南智能数据采集服务" 
                 MinHeight="600" 
                 MinWidth="1000"
                 Height="600" 
                 Width="1000"
                 BorderThickness="1" 
                 ResizeMode="CanResizeWithGrip"
                 WindowStartupLocation="CenterScreen" Closing="MetroWindow_Closing">
    <mah:MetroWindow.LeftWindowCommands>
        <mah:WindowCommands>
            <Image Width="24" Height="24" Margin="10 0 10 0" Source="/Favorites/icons8-pinterest-100.png"></Image>
        </mah:WindowCommands>
    </mah:MetroWindow.LeftWindowCommands>
    <view:HamburgerMenu DataContext="{Binding}" />
</mah:MetroWindow>
