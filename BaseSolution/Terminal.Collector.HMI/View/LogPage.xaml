<Page x:Class="Terminal.Collector.HMI.View.LogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Terminal.Collector.HMI.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LogPage">

    <Grid>
        <DataGrid x:Name="gdLog" IsReadOnly="True" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="类型" Width="100" Binding="{ Binding Path=Type}" />
                <DataGridTextColumn Header="时间" Width="150" Binding="{ Binding Path=LogTime}" />
                <DataGridTextColumn Header="详细信息" Width="700" Binding="{ Binding Path=Msg}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
